<h1>カートに入れる</h1>
<%= form_for @cart_item,url: {action: :create} do |f| %>
    <%= Product.find(@product_id).name %>
    <%= f.label :qty, '数量' %>
    <%= f.text_field :qty %>
    <%= f.hidden_field :product_id, value: @product_id %>
    <%= f.hidden_field :cart_id, value: @cart_id %>
    <%= f.submit 'カートに登録する' %>
<% end %>
